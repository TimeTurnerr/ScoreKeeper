<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/football">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teams"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/info2"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_below="@id/teams"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/info1"
            android:textColor="#ffffff"
            android:textAppearance="?android:textAppearanceSmall"
            tools:ignore="NotSibling" />
        <LinearLayout
            android:id="@+id/teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="InvalidId">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:fontFamily="sans-serif-medium"
                    android:padding="4dp"
                    android:text="@string/teamA" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scr"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorscore1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textSize="56sp"
                        android:textColor="@color/colorscore1"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/score"
                        android:id="@+id/team_a_score"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textSize="30sp"
                        android:textColor="@color/colorscore2"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/score"
                        android:id="@+id/team_a_score2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/foul"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorscore2"/>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/goal"
                    android:id="@+id/goalA"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/freekick"
                    android:id="@+id/freeKickA"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/redcard"
                    android:id="@+id/redCardA"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/yellowcard"
                    android:id="@+id/yellowCardA"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/outside"
                    android:id="@+id/outSideA"
                    android:onClick="onClick"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="16dp"
                android:id="@+id/divider"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/teamb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/teamB" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scr"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorscore1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/score"
                        android:textSize="56sp"
                        android:textColor="@color/colorscore1"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/team_b_score"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/score"
                        android:textSize="30sp"
                        android:textColor="@color/colorscore2"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/team_b_score2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/foul"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/colorscore2"/>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/goal"
                    android:id="@+id/goalB"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/freekick"
                    android:id="@+id/freeKickB"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/redcard"
                    android:id="@+id/redCardB"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/yellowcard"
                    android:id="@+id/yellowCardB"
                    android:onClick="onClick"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/outside"
                    android:id="@+id/outSideB"
                    android:onClick="onClick"/>
                </LinearLayout>
            </LinearLayout>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teams"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="165dp"
            android:onClick="onClick"
            android:text="@string/reset"
            tools:ignore="UnknownId" />
    </RelativeLayout>
</ScrollView>
